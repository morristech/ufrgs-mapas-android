<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/drawer_header_image"
        android:src="@drawable/placeholder_blue"
        android:scaleType="fitXY"
        android:layout_width="300dp"
        android:layout_height="169dp"
        />

    <TextView
        android:id="@+id/drawer_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UFRGS Mapas"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:textColor="@color/IconsColor"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/transparent"
        android:layout_alignBottom="@+id/drawer_header_image" />

</RelativeLayout>